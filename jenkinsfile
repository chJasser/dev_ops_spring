pipeline {
    agent any
    environment {
        TAG = '1.0'
    }
    stages {
      
        stage('Build') {
            steps {
                sh 'mvn -Dmaven.test.skip=true clean package'
            }
        }


        stage('install') {
            steps {
                sh 'mvn  -Dmaven.test.skip=true clean install '

            }

        }
      stage('Dokcer build image') {
            steps {
                script {
                    echo "Dokcer build image"
                    sh 'docker build -t fakher14/tpachat -f Dockerfile .'
                }
            }
        }
       
        stage('Docker push') {
           steps {
                script {
                    echo "Docker push"
                withCredentials([string(credentialsId: 'tpachat', variable: 'docker')]) {
                       sh 'docker login -u fakher14 -p ${docker}'
                        sh 'docker tag  fakher14/tpachat fakher14/tpachat:1.0'
                       sh 'docker push fakher14/tpachat:1.0'
                       sh 'docker logout'
                   }
               }
           }
        }
       


    }
   

    }
