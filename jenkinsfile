pipeline {
    agent any

    stages {
      
        stage('Build') {
            steps {
                sh 'mvn -Dmaven.test.skip=true clean package'
            }
        }


        stage('install') {
            steps {
                sh 'mvn  -Dmaven.test.skip=true clean install '

            }

        }
       
         stage('start container') {
            steps {
                echo 'start container'
                sh 'docker-compose up -d --no-build'
                sh 'docker-compose ps'
            }
        }
        stage('Docker hub push') {
           steps {
                script {
                    echo "Docker push"
                 withCredentials([string(credentialsId: '1234', variable: 'dockerhub')]) {
                       sh 'docker login -u fakher14 -p ${dockerhub}'
                       sh 'docker tag  tpachat fakher14/tpachat:1.0'
                       sh 'docker push fakher14/tpachat:1.0'
                       sh 'docker logout'
                   }
               }
           }
        }
       


    }
   

    }
